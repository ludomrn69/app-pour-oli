// storage.rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Règles pour les images de souvenirs
    match /memories/{imageId} {
      // Lecture autorisée pour tous
      allow read: if true;
      
      // Upload autorisé seulement pour les utilisateurs authentifiés
      // Limite la taille à 10MB et formats d'images uniquement
      allow write: if request.auth != null
                   && resource.size < 10 * 1024 * 1024
                   && resource.contentType.matches('image/.*');
    }
    
    // Règles pour les images de conversations
    match /messages/{imageId} {
      // Lecture autorisée pour tous
      allow read: if true;
      
      // Upload autorisé seulement pour les utilisateurs authentifiés
      // Limite la taille à 10MB et formats d'images uniquement
      allow write: if request.auth != null
                   && resource.size < 10 * 1024 * 1024
                   && resource.contentType.matches('image/.*');
    }
    
    // Règle par défaut: refuser tout le reste
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}